<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PartialViewComponentHomework</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PartialViewComponentHomework.styles.css" asp-append-version="true" />
</head>
<body>
	@* <partial name="HeaderPartialView.cshtml"></partial> *@
	<header class="custom-header">
		@await Component.InvokeAsync("Header")
	</header>
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
	<footer>
		<partial name="FooterPartialView.cshtml"></partial>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
